<div class="container">
  <h1>Dashboard</h1>
  <div class="addsubject">
    <%= link_to "Add a subject", new_user_user_subject_path(current_user) %>
    <% @user.user_subjects.each do |us| %>
      <li><%= Subject.find(us[:subject_id]).name %></li>
    <% end %>
  </div>

  <div class="calendar">
    <div>
      <%= month_calendar events: @meetings do |date, meetings| %>
        <%= date.day %>

        <% meetings.each do |meeting| %>
          <div>
            <%= meeting.location %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

